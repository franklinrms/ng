// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String @id @default(uuid())
    username  String @unique
    password  String
    accountId String @unique

    account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

    @@map("users")
}

model Account {
    id      String @id @default(uuid())
    balance Float  @default(100)

    User       User?
    TransferOf Transaction[] @relation("transferOf")
    TransferTo Transaction[] @relation("transferTo")

    @@map("accounts")
}

model Transaction {
    id                String   @id @default(uuid())
    debitedAccountId  String
    creditedAccountId String
    value             Float
    createdAt         DateTime @default(now())

    debitedAccount  Account @relation("transferOf", fields: [debitedAccountId], references: [id], onDelete: Cascade)
    creditedAccount Account @relation("transferTo", fields: [creditedAccountId], references: [id], onDelete: Cascade)

    @@map("transactions")
}
